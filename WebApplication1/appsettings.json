{
  "JWT": {
    "ValidAudience": "https://your-domain.com",
    "ValidIssuer": "https://your-domain.com",
    "Secret": "YOUR_JWT_SECRET_HERE",
    "RefreshTokenValidityInDays": 7
  },
  "Facebook": {
    "AppId": "YOUR_FACEBOOK_APP_ID",
    "AppSecret": "YOUR_FACEBOOK_APP_SECRET"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EmailConfiguration": {
    "From": "your-email@gmail.com",
    "SmtpServer": "smtp.gmail.com",
    "Port": 465,
    "Username": "your-email@gmail.com",
    "Password": "YOUR_EMAIL_PASSWORD"
  },
  "Cors": {
    "Local": "https://localhost:44385",
    "Online": "https://your-domain.com"
  },
  "Salesforce": {
    "LoginUrl": "https://login.salesforce.com",
    "ClientId": "YOUR_SALESFORCE_CLIENT_ID",
    "ClientSecret": "YOUR_SALESFORCE_CLIENT_SECRET",
    "UserName": "your-salesforce-username",
    "Password": "YOUR_SALESFORCE_PASSWORD",
    "ApiVersion": "v55.0"
  },
  "ConnectionStrings": {
    "DefaultConnection": "YOUR_DATABASE_CONNECTION_STRING_HERE"
  },
  "Odoo": {
    "ApiUrl": "https://your-odoo-instance.com/",
    "DbName": "your-database-name",
    "UserName": "your-odoo-username",
    "Password": "YOUR_ODOO_PASSWORD"
  }
}